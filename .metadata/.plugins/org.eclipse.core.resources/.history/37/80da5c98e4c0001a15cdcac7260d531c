<script>
	$("#btnInsert").on("click", function(){
		if(!confirm("저장하실래요?")) return;
		$("#tbl .row .chk").each(function(){
			
		});
	})
	
getList();

	function getList() {
		$.ajax({
			type : "get",
			url : "/airbnb.json",
			dataType : "json",
			success : function(data) {
				var template = Handlebars.compile($("#temp").html());
				$("#tbl").html(template(data));
			}
		});
	}
</script>
